{
  "name": "opus4-repo/tools",
  "description": "OPUS 4 tool library",
  "type": "library",
  "keywords": [
    "framework",
    "opus4"
  ],
  "homepage": "https://opus4.kobv.de/",
  "license": "GPL-2.0+",
  "require": {
    "opus4-repo/framework": ">=4.5.0-RC1"
  },
  "autoload": {
    "psr-0": {
      "Opus_Tools": "library/"
    }
  },
  "include-path": [
    "library/"
  ],
  "config": {
    "bin-dir": "bin"
  },
  "bin": [
    "bin/opus-update.php"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "4.5.x-dev"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.5",
    "phpunit/dbunit": "1.4.*"
  },
  "archive": {
    "exclude": ["/tests"]
  }
}
